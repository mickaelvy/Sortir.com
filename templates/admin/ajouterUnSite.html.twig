{% extends 'base.html.twig' %}
{% form_theme formAjoutSite 'bootstrap_4_layout.html.twig' %}


{% block main %}

    <div class="container-fluid">
        <div class="row mt-3">
            <div class="col">
                <h3>Ajouter un site</h3>
                <hr>
            </div>
        </div>
        {{ form_start(formAjoutSite) }}
        {{ form_row(formAjoutSite.nom,{'label': 'Nom du site :'}) }}
        <button type="submit"  name="ajouter" class="btn btn-primary">Ajouter</button>
        {{ form_end(formAjoutSite) }}
    </div>

{% endblock %}