{%  extends 'base.html.twig' %}

{% block main %}
    <article>
        <div style="text-align: center">
            <h2>Sortie</h2>
            <br>
        </div>


        <div class="container" >
            <div class="row" >
                <div class="col-3 " >

                    <p><strong> Nom de la sortie : </strong> </p>
                    <p><strong>Date et heure de la sortie : </strong></p>
                    <p><strong>Date limite d'inscription : </strong></p>
                    <p><strong>Nombre de places : </strong></p>
                    <p><strong>Durée : </strong></p>
                </div>

                <div class="col-3 " >
                    <p>{{ sortie.nom }}</p>
                    <p>{{ sortie.dateHeureDebut| date ('d/m/Y à H:i') }}</p>
                    <p>{{  sortie.dateLimiteInscription | date ('d/m/Y') }} </p>
                    <p>{{ sortie.nbrInscriptionMax }}</p>
                    <p>{{ sortie.duree }}</p>
                </div>

                <div class="col-3">
                    <p><strong> Lieu : </strong></p>
                    <p><strong>Rue : </strong></p>
                    <p><strong>Ville : </strong></p>
                    <p><strong>Code Postal : </strong></p>
                    <p><strong>Latitude : </strong></p>
                    <p><strong>Longitude : </strong></p>
                </div>

                <div class="col-3">
                    <p>{{ sortie.lieu.nom}}</p>
                    <p>{{ sortie.lieu.rue }}</p>
                    <p>{{  sortie.lieu.ville.nom }} </p>
                    <p>{{ sortie.lieu.ville.codePostal }}</p>
                    <p>{{ sortie.lieu.latitude }}</p>
                    <p>{{ sortie.lieu.longitude }}</p>
                </div>
            </div>
            <div class="row">
                <p><strong>Description et infos : </strong></p>
                <p>{{ sortie.infosSortie | raw }}</p>
            </div>
        </div>
    </article>


    <div id="listParticip">
        <h4> Liste des participants inscrits : </h4>
        <table id="tableAfficher">
            <tr>
                <th>Pseudo</th>
                <th>Nom</th>
            </tr>
            {% for participant in participants %}
                <tr>
                    <td>{{ participant.pseudo }}</td>
                    <td><a href="{{ path('afficher_user', {'id' : participant.id} ) }}">{{ participant.prenom }} {{ participant.nom }}</td>
                </tr>

            {% endfor %}
        </table>
    </div>

{% endblock %}